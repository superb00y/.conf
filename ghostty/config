keybind = control+s>7=goto_tab:7
keybind = control+s>8=goto_tab:8
keybind = control+s>9=goto_tab:9

# split
keybind = control+s>\=new_split:right
keybind = control+s>-=new_split:down
keybind = control+s>j=goto_split:bottom
keybind = control+s>k=goto_split:top
keybind = control+s>h=goto_split:left
keybind = control+s>l=goto_split:right
keybind = control+s>z=toggle_split_zoom
